
      <div class="custom-card mx-auto">
        <div class="custom-card-title text-center">
          <h2>Crear Controlador</h2>
        </div>
        <hr />
        <div class="card-body">
          <%= form_with(url: controllers_path, local: true) do |form| %>
            <div class="form-group mb-4">
              <%= form.label :name, 'Nombre del Controlador', class: 'form-label custom-card-text' %>
              <%= form.text_field :name, class: 'form-control', placeholder: 'Ingresa el nombre del controlador' %>
            </div>

            <div class="form-group mb-4">
              <%= form.label :esp32_mac_address, 'Dirección MAC del ESP32', class: 'form-label custom-card-text' %>
              <%= form.text_field :esp32_mac_address, class: 'form-control', placeholder: 'Ingresa la dirección MAC del ESP32' %>
            </div>

            <div class="form-group mb-4">
              <%= form.label :locker_count, 'Cantidad de Lockers', class: 'form-label custom-card-text' %>
              <%= form.select :locker_count, options_for_select((1..4).map { |i| [i, i] }), class: 'form-select' %>
            </div>

            <% if current_user.is_admin == false %>
              <%= form.hidden_field :user_id, value: current_user.id %>
            <% end %>

            <hr />

            <div>
              <div class="text-center">
                <%= form.submit 'Crear Controlador', class: 'btn btn-primary px-4 py-2' %>
              </div>

              <div class="text-center mt-3">
                <%= link_to 'Cancelar', controllers_path, class: 'btn btn-secondary px-4 py-2' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
 

