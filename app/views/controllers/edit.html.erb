<h1 class="ms-5 mt-3">Editar Controlador</h1>
<div class="container">
  <div>
    <%= form_with(model: @controller, local: true) do |form| %>
      <div class="form-group my-3">
        <%= form.label :name, class: 'form-label fs-5' %>
        <%= form.text_field :name, class: 'form-control', placeholder: 'Ingresa el nombre del controlador' %>
      </div>

      <div class="form-group my-3">
        <%= form.label :esp32_mac_address, class: 'fs-5 form-label' %>
        <%= form.text_field :esp32_mac_address, class: 'form-control', placeholder: 'Ingresa la direcciÃ³n MAC del ESP32' %>
      </div>

      <!-- Campo para seleccionar la cantidad de lockers -->
      <div class="form-group my-3">
        <%= form.label :locker_count, 'Cantidad de Lockers', class: 'fs-5 form-label' %>
        <%= form.select :locker_count, options_for_select((1..4).map { |i| [i, i] }, @controller.locker_count), class: 'form-select' %>
      </div>

      <div class="form-group mt-3">
        <%= form.submit 'Actualizar Controlador', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
